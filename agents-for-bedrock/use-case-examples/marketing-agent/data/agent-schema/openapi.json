{
  "openapi": "3.0.1",
  "info": {
    "title": "User and Product information API",
    "description": "API for getting User and Product information",
    "version": "1.0.0"
  },
  "paths": {
    "/getItemInfo": {
      "post": {
        "description": "Get the product information in detail",
        "parameters": [
          {
            "name": "item_id",
            "in": "query",
            "description": "Item ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with product information in detail",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/product-information"
                }
              }
            }
          }
        }
      }
    },
    "/getUserInfo": {
      "post": {
        "description": "Get the target audience for the product in detail",
        "parameters": [
          {
            "name": "item_id",
            "in": "query",
            "description": "Item ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with user information in detail",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user-information"
                }
              }
            }
          }
        }
      }
    },
    "/contentGenerate": {
      "post": {
        "description": "Assist user to generate the content for recommendation",
        "parameters": [
          {
            "name": "item",
            "in": "query",
            "description": "Product Name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "user",
            "in": "query",
            "description": "User Persona",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sample",
            "in": "query",
            "description": "Sample from creative context",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "image",
            "in": "query",
            "description": "Image Url",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "campaign",
            "in": "query",
            "description": "Campaign or discount for this product",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with generated content",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/generated-content"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "product-information": {
        "type": "array",
        "description": "product information",
        "properties": {
          "item_id": {
            "type": "string",
            "description": "Item ID"
          },
          "name": {
            "type": "string",
            "description": "Product Name"
          },
          "price": {
            "type": "number",
            "description": "Product Price"
          },
          "category": {
            "type": "string",
            "description": "Product Category"
          }
        }
      },
      "user-information": {
        "type": "string",
        "description": "generated user persona for product",
        "properties": {
          "generatedcontent": {
            "type": "string",
            "description": "generated content"
          }
        }
      },
      "generated-content": {
        "type": "string",
        "description": "generated content for user",
        "properties": {
          "generatedcontent": {
            "type": "string",
            "description": "generated content"
          }
        }
      }
    }
  }
}
